{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "impliedStrict": true,
      "jsx": true,
    }
  },
  "extends": [
    "recommended/esnext",
    "recommended/esnext/style-guide",
    "recommended/node",
    "recommended/node/style-guide",
    "plugin:react/recommended",
  ],
  "rules": {
    "one-var": 1,
    "no-console": 0,
    "import/no-nodejs-modules": 0,
    "import/no-commonjs": 0,
    "no-var": 0,
    "no-unused-vars": ["error", { "vars": "all", "args": "none", "ignoreRestSiblings": true }],
    "class-methods-use-this": 0,
    "react/prop-types": 0,
    "no-script-url": 0,
    "no-invalid-this": 0,
    "no-sync": 0,
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jquery": true,
    "mongo": true
  },
  "plugins": [
    "react"
  ]
}
